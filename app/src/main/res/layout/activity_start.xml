<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.start.StartActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/button_start_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/button_start_list" />

        <Button
            android:id="@+id/button_start_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_start_list"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/button_start_about" />

        <Button
            android:id="@+id/button_start_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_start_about"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/button_start_exit" />
    </RelativeLayout>
</RelativeLayout>